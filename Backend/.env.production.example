# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Application
NODE_ENV=production
PORT=3000
APP_NAME=Study Pro Global
APP_URL=https://www.studyproglobal.com.bd

# Database (MySQL)
DB_HOST=your_db_host
DB_PORT=3306
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session
SESSION_SECRET=generate_another_secure_random_string_here
SESSION_TIMEOUT=3600000

# CORS (Allow multiple subdomains)
CORS_ORIGIN=https://www.studyproglobal.com.bd,https://studyproglobal.com.bd,https://api.studyproglobal.com.bd,https://mobile.studyproglobal.com.bd,https://studypro-backend.studyproglobal.com.bd

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
FILE_STORAGE_MODE=cpanel
CPANEL_UPLOAD_DIR=/home/myxenpay/studyproglobal.com.bd/uploads

# Email (SMTP)
SMTP_HOST=mail.studyproglobal.com.bd
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@studyproglobal.com.bd
SMTP_PASSWORD=your_email_password
EMAIL_FROM=info@studyproglobal.com.bd

# Stripe Payments
STRIPE_PUBLIC_KEY=pk_live_your_key
STRIPE_SECRET_KEY=sk_live_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# Crypto Payments
MYXN_PAYMENT_WALLET_ADDRESS=Azvjj21uXQzHbM9VHhyDfdbj14HD8Tef7ZuC1p7sEMk9

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/home/myxenpay/studypro-backend/logs/app.log

# Admin
ADMIN_EMAIL=admin@studyproglobal.com.bd
