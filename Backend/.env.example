# Study Pro Global Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=production
PORT=3000
APP_NAME=Study Pro Global
APP_URL=https://www.studyproglobal.com.bd

# Database Configuration
DB_HOST=server10.cloudswebserver.com
DB_PORT=3306
DB_NAME=myxenpay_studyproglobal
DB_USER=myxenpay_studyproglobal
DB_PASSWORD=your_database_password_here
DB_CHARSET=utf8mb4

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_generate_random_string
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_session_secret_here_generate_random_string
SESSION_TIMEOUT=3600000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@studyproglobal.com.bd

# Payment Gateway - Stripe (Visa, Mastercard, Amex)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Payment Gateway - $myxn Token (Cryptocurrency)
MYXN_TOKEN_CONTRACT_ADDRESS=your_myxn_token_contract_address
MYXN_PAYMENT_WALLET_ADDRESS=your_wallet_address_here
MYXN_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
MYXN_CHAIN_ID=1

# Cloud Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=studyproglobal-uploads

# Redis Cache (optional but recommended)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# AI Chat Support
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://www.studyproglobal.com.bd

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/studyproglobal/app.log

# Admin Configuration
ADMIN_EMAIL=admin@studyproglobal.com.bd
ADMIN_PASSWORD=change_this_password_immediately

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_AUTO_SCHOLARSHIP_MATCHING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Third Party Integrations
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
FACEBOOK_PIXEL_ID=your_facebook_pixel_id
