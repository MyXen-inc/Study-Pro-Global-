# Study Pro Global Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=production
PORT=3000
APP_NAME=Study Pro Global
APP_URL=https://www.studyproglobal.com.bd

# Database Configuration
DB_HOST=server10.cloudswebserver.com
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=generate_another_secure_random_string_here
SESSION_TIMEOUT=3600000

# Email Configuration
SMTP_HOST=mail.studyproglobal.com.bd
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@studyproglobal.com.bd
SMTP_PASSWORD=your_email_password
EMAIL_FROM=info@studyproglobal.com.bd
# IMAP Configuration (for receiving emails)
IMAP_HOST=mail.studyproglobal.com.bd
IMAP_PORT=993
# POP3 Configuration (alternative to IMAP)
POP3_HOST=mail.studyproglobal.com.bd
POP3_PORT=995

# Payment Gateway - Stripe (Visa, Mastercard, Amex)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Payment Gateway - $myxn Token (Cryptocurrency)
MYXN_TOKEN_CONTRACT_ADDRESS=CHXoAEvTi3FAEZMkWDJJmUSRXxYAoeco4bDMDZQJVWen
MYXN_PAYMENT_WALLET_ADDRESS=Azvjj21uXQzHbM9VHhyDfdbj14HD8Tef7ZuC1p7sEMk9
MYXN_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
MYXN_CHAIN_ID=1

# Cloud Storage (AWS S3 or cPanel File Manager)
# Note: You can use AWS S3 or cPanel server's file system for storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=studyproglobal-uploads
# Alternative: Use cPanel server storage
FILE_STORAGE_MODE=cpanel
# Options: s3 (uses AWS S3), cpanel (uses server file system)
CPANEL_UPLOAD_DIR=/home/myxenpay/studyproglobal.com.bd/uploads

# Redis Cache (optional but recommended)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# AI Chat Support
# Note: OpenAI is optional - the system includes basic AI chat responses
# You can use OpenAI for enhanced chat, or use the basic implementation
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
AI_CHAT_MODE=basic
# Options: basic (uses built-in responses), openai (uses OpenAI API)

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://www.studyproglobal.com.bd,https://studyproglobal.com.bd,https://api.studyproglobal.com.bd,https://mobile.studyproglobal.com.bd,https://studypro-backend.studyproglobal.com.bd

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/home/myxenpay/studypro-backend/logs/app.log

# Admin Configuration
ADMIN_EMAIL=admin@studyproglobal.com.bd
ADMIN_PASSWORD=change_this_password_immediately

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_AUTO_SCHOLARSHIP_MATCHING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Third Party Integrations
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# MSM Unify Integration (Optional - for enhanced university services)
# See: https://www.msmunify.com/service/ and https://www.msmunify.com/for-institutions/
MSMUNIFY_API_KEY=your_msmunify_api_key_here
MSMUNIFY_API_URL=https://api.msmunify.com/v1
MSMUNIFY_ENABLED=false
